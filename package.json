{
  "name": "prose-md-sample",
  "version": "0.0.1",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "concurrently \"yarn:build:*\"",
    "build:css": "yarn generate:css --minify",
    "build:remix": "remix build",
    "dev": "concurrently \"yarn:dev:*\"",
    "dev:css": "yarn generate:css --watch",
    "dev:remix": "remix dev",
    "generate:css": "npx tailwindcss -i tailwindcss.css -o app/styles/globals.css",
    "lint": "eslint --ext .ts,.tsx app",
    "format": "prettier --write 'app/**/*.{js,jsx,ts,tsx}'"
  },
  "dependencies": {
    "@remix-run/node": "^1.6.7",
    "@remix-run/react": "^1.6.7",
    "@remix-run/vercel": "^1.6.7",
    "@vercel/node": "^2.4.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.6.7",
    "@remix-run/eslint-config": "^1.6.7",
    "@remix-run/serve": "^1.6.7",
    "@tailwindcss/typography": "^0.5.4",
    "@types/react": "^18.0.16",
    "@types/react-dom": "^18.0.6",
    "autoprefixer": "^10.4.8",
    "concurrently": "^7.3.0",
    "daisyui": "^2.22.0",
    "eslint": "^8.20.0",
    "postcss": "^8.4.16",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=14"
  }
}
